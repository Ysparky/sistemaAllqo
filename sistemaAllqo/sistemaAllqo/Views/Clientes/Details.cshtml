@model sistemaAllqo.Models.Cliente

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card shadow">
    <div class="card-header">
        <h3 class="m-0 font-weight-bold text-primary float-left">Cliente</h3>
        <a class="btn btn-info text-wrap float-right mx-2" asp-action="Index">Regresar</a>
        <a class="btn btn-info text-wrap float-right mx-2" asp-action="Edit" asp-route-id="@Model.idCliente">Editar</a>
        <a class="btn btn-info text-wrap float-right mx-2" asp-action="Pet" asp-route-id="@Model.idCliente">Agregar Mascotas</a>
    </div>
    <div class="card-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.nombres)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.nombres)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.apellidos)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.apellidos)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.direccion)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.direccion)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.dni)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.dni)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.correo)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.correo)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.numCelular)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.numCelular)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.estado)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.estado)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.lugar)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.lugar.nombre)
            </dd>
        </dl>
        <table class="table table-hover text-center table-responsive-sm">
            <thead class="table-info">
                <tr>
                    <th>Nombre</th>
                    <th>Edad</th>
                    <th>Mascota</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewData["Mascotas"] as IEnumerable<sistemaAllqo.Models.Mascota>)
                {
                    <tr>
                        <th>@item.nombre</th>
                        <th>@item.edad</th>
                        <th>@item.raza.nombre</th>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>