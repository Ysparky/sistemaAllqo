@model sistemaAllqo.Models.Rol

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1> Editar Rol </h1>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="NrNombre" class="col-sm-2 col-form-label">Nombre</label>
        <div class="col-sm-10">
            <input asp-for="NrNombre" class="form-control" />
            <span asp-validation-for="NrNombre" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-default">Actualizar</button>
            <a asp-action="List" class="btn btn-default">Cancelar</a>
        </div>
    </div>
    <hr />
    <div class="card">
        <div class="card-header">
            <h3>Usuarios en este rol</h3>
        </div>
        <div class="container card-body">
            @if (Model.Usuarios.Any())
            {
                foreach (var user in Model.Usuarios)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">No hay usuarios en este momento</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Roles" asp-action="EditUsersInRole" asp-route-rolId="@Model.Id" class="btn btn-primary" style="width:auto">Agrega o elimina usuarios de este rol</a>
        </div>
    </div>
</form>
