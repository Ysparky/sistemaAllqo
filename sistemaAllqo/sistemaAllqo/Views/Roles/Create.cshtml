@model sistemaAllqo.Models.Rol

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1> Crear Nuevo Rol </h1>

<hr />
<div class="row">
    <div class="col-md-4" style="margin-left: auto; margin-right: auto; display: block; text-align: left;">
        <form asp-action="Create" method="post" class="mt-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NrNombre" class="control-label">Nombre</label>
                <input asp-for="NrNombre" class="form-control">
                <span asp-validation-for="NrNombre" class="text-danger"> </span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear rol" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
