@model IEnumerable<sistemaAllqo.Models.Lugar>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.agregado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.agregado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idLugar">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idLugar">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idLugar">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
