@model IEnumerable<sistemaAllqo.Models.Mascota>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow">
    <div class="card-header ">
        <h3 class="m-0 font-weight-bold text-primary">MASCOTAS</h3>
    </div>
    <div class="card-body">
        <h2>Index</h2>

        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <div class="table-responsive container">

            <table class=" table table-bordered text-center table-hover " id="tabla" style="width: 100%;">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.edad)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.cliente)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.raza)
                        </th>
                        <th>OPCIONES</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.edad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.cliente.apellidos)
                                @Html.DisplayFor(modelItem => item.cliente.nombres)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.raza.nombre)
                            </td>
                            <td>
                                <a class="btn p-1" asp-action="Edit" asp-route-id="@item.idMascota"><i class="fas fa-edit"></i></a> |
                                <a class="btn p-1" asp-action="Details" asp-route-id="@item.idMascota"><i class="fas fa-eye"></i></a> |
                                <a class="btn p-1" asp-action="Delete" asp-route-id="@item.idMascota"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
